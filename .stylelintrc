{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-type-no-unknown": [true, { "ignoreTypes": ["people-item"] }],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend"
        ]
      }
    ],
    "indentation": [
      2,
      {
        "except": ["block"],
        "message": "Please use 2 spaces for indentation.",
        "severity": "warning"
      }
    ]
  }
}